{
    "name": "xunitpatterns/xunitpatterns-stan",
    "description": "PHPStan linting for PHPUnit based on the smells in the XUnit Patterns book by Gerard Meszaros",
    "type": "phpstan-extension",
    "homepage": "https://github.com/ethancarlsson/phpunitx",
    "require-dev": {
        "phpstan/phpstan": "^1.7.12",
        "nikic/php-parser": "^4.13.0",
        "php-parallel-lint/php-parallel-lint": "^1.2",
        "phpstan/phpstan-strict-rules": "^1.0",
        "phpunit/phpunit": "^9.5.20",
        "roave/security-advisories": "dev-latest",
        "jetbrains/phpstorm-attributes": "^1.0",
        "phpstan/phpstan-phpunit": "^1.3",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "license": "MIT",
    "scripts": {
        "test": "./vendor/bin/phpunit tests",
        "cs": "./vendor/bin/phpcs --standard=PSR12 --exclude=\"PSR1.Methods.CamelCapsMethodName\" src/ tests/",
        "cs-fix": "./vendor/bin/phpcbf --standard=PSR12 --exclude=\"PSR1.Methods.CamelCapsMethodName\" src/ tests/"
    },
    "autoload": {
        "psr-4": {
            "XUnitLint\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "XUnitLint\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "ethancarlsson",
            "email": "ethanmcarlsson@gmail.com"
        }
    ],
    "extra": {
        "phpstan": {
            "includes": [
                "extension.neon"
            ]
        }
    }
}
